    "version": "0.2.0",
    "configurations": [
{
    "name": "Python: Current File",
    "type": "python",
    "request": "launch",
    "program": "${file}"
},
        {
            "name": "External Terminal/Console",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal",
            "stopOnEntry": false,
        
        },
    {
        "name": "Python Experimental: Terminal (external)",
        "type": "pythonExperimental",
        "request": "launch",
        "program": "${file}",
        "console": "externalTerminal",
        
    },
    {  
        "name": "External Terminal/Console",  
        "type": "python",  
        "request": "launch",  
        "stopOnEntry": true,  
        "program": "${file}",  
        "console": "externalTerminal",  
        "envFile": "${workspaceRoot}/.env",  
        "debugOptions": [  
            "WaitOnAbnormalExit",  
            "WaitOnNormalExit"  
        ]  
    },  
    ]